<% products.forEach(function(product){%>
    <div class="card">
        <div class="card-content">
            <div class="top-bar">
                <span>$
                    <%=product.price%>
                </span>
            </div>
            <a data-toggle="modal" href="#tallModal" class="img">
                <img src="<%=product.image%>">
            </a>
        </div>
        <div class="card-description">
            <div class="id">
                <%=product._id%>
            </div>
            <div class="title">
                <%=product.item%>
            </div>
            <div class="cart">
                <span class="glyphicon glyphicon-shopping-cart"></span>
            </div>
            <div class='item-desc hidden'>
                <%=product.description%>
            </div>
            <div class='item-qty hidden'>
                <%=product.quantity%>
            </div>
        </div>
        <div class="card-footer">
            <div class="span">
                <%=product.category%>
            </div>
        </div>
    </div>
    <%})%>